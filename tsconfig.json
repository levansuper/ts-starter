{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"outDir": "dist",
		"allowJs": true,
		"moduleResolution": "node",
		"target": "es6",
		"lib": ["es2016"],
		"checkJs": false,
		"sourceMap": true,
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
